@using FreeMarket.Models
@model RateOrderViewModel

@{
    ViewBag.Title = "Rate Your Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-12">
        <div class="row">
            <h1 class="text-center">Please Rate Your Order (@Model.Order.OrderNumber)</h1>
            <hr />
        </div>
        
        @using (Html.BeginForm("UpdateReviews", "Manage", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            
            @Html.Partial("_ReviewsPartial", Model)
            <div class="text-center">
                <input type="submit" value="Save/Update" class="btn btn-success" />
                @Html.ActionLink("Back", "Index", "Manage", null, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>
