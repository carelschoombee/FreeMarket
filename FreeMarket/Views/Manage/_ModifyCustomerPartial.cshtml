@model FreeMarket.Models.ModifyAccountDetailsViewModel

<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.PrimaryPhoneNumber, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.PrimaryPhoneNumber, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.SecondaryPhoneNumber, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.SecondaryPhoneNumber, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.PreferredCommunicationMethod, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.DropDownListFor(model => model.PreferredCommunicationMethod, Model.CommunicationOptions, "Choose", new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.DefaultAddress, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.DropDownListFor(model => model.DefaultAddress, Model.AddressNameOptions, new { @class = "form-control" })
    </div>
</div>

