@using FreeMarket.Models
@model OrderHeaderViewModel

@{
    ViewBag.Title = "View Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-4">
                <div>
                    @Model.Order.CustomerName
                </div>
                <div>
                    @Model.Order.CustomerEmail
                </div>
                <div>
                    @Model.Order.CustomerPrimaryContactPhone
                </div>
                <div>
                    @Model.DeliveryAddress
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(c => Model.Order.OrderNumber, new { @class = "col-md-4 control-label" })
                    <div class="col-sm-6">
                        @Html.DisplayFor(c => Model.Order.OrderNumber)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => Model.NumberOfItemsInOrder, new { @class = "col-md-4 control-label" })
                    <div class="col-sm-6">
                        @Html.DisplayFor(c => Model.NumberOfItemsInOrder)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => Model.Order.OrderDatePlaced, new { @class = "col-md-4 control-label" })
                    <div class="col-sm-6">
                        @Html.DisplayFor(c => Model.Order.OrderDatePlaced)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => Model.Order.OrderStatus, new { @class = "col-md-4 control-label" })
                    <div class="col-sm-6">
                        @Html.DisplayFor(c => Model.Order.OrderStatus)
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <table class="table table-condensed table-bordered-custom well">
                    <tr>
                        <td class="col-sm-2 text-left"><strong>Sub-Total:</strong></td>
                        <td class="col-sm-2 text-right"><strong>@string.Format("{0:C}", Model.Order.SubTotal)</strong></td>
                    </tr>
                    <tr>
                        <td class="col-sm-2 text-left"><strong>Shipping:</strong></td>
                        <td class="col-sm-2 text-right"><strong>@string.Format("{0:C}", Model.Order.ShippingTotal)</strong></td>
                    </tr>
                    <tr class="text-primary">
                        <td class="col-sm-2 text-left"><strong style="font-size: 20px">Total:</strong></td>
                        <td class="col-sm-2 text-right"><strong style="font-size: 20px">@string.Format("{0:C}", Model.Order.TotalOrderValue)</strong></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
