<script type="text/javascript">

    $(document).ready(function () {
        $('#siteConfigForm')
                .bootstrapValidator({
                    feedbackIcons: {
                        valid: 'glyphicon glyphicon-ok',
                        invalid: 'glyphicon glyphicon-remove',
                        validating: 'glyphicon glyphicon-refresh'
                    },
                    fields: {
                        'Value': {
                            validators: {
                                notEmpty: {
                                    message: 'The field is required.'
                                }
                            }
                        }
                    }
                })
    });

</script>