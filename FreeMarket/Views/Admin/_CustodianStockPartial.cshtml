@using FreeMarket.Models
@model ProductCustodian

<div class="form-group">
    @Html.LabelFor(m => m.CustodianName, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.DisplayFor(m => m.CustodianName)
        @Html.HiddenFor(m => m.CustodianNumber)
        @Html.HiddenFor(m => m.ProductNumber)
        @Html.HiddenFor(m => m.SupplierNumber)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.ProductName, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.DisplayFor(m => m.ProductName)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.SupplierName, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.DisplayFor(m => m.SupplierName)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.QuantityOnHand, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.DisplayFor(m => m.QuantityOnHand)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.StockReservedForOrders, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.DisplayFor(m => m.StockReservedForOrders)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.QuantityChange, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.EditorFor(m => m.QuantityChange, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.DateLastIncreasedBySupplier, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.DisplayFor(m => m.DateLastIncreasedBySupplier)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.AmountLastIncreasedBySupplier, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.DisplayFor(m => m.AmountLastIncreasedBySupplier)
    </div>
</div>


