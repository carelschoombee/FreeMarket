@using FreeMarket.Models
@model List<CashCustomer>

@if (Model != null && Model.Count > 0)
{

<table class="table table-bordered-custom table-responsive">

    <tr>
        <th>
            #
        </th>
        <th>
            Name
        </th>
        <th>
            Phone
        </th>
        <th>
            Email
        </th>
        <th>
            Address
        </th>
        <th>
            Edit
        </th>
        <th>
            Create New Order
        </th>
    </tr>
    @foreach (CashCustomer result in Model)
    {
        <tr class="well">
            <td>
                @result.Id
            </td>
            <td>
                @result.Name
            </td>
            <td>
                @result.PhoneNumber
            </td>
            <td>
                @result.Email
            </td>
            <td>
                @result.DeliveryAddress
            </td>
            <td>
                @Html.ActionLink("Edit Customer Details", "EditCashCustomer", "Admin", new { id = result.Id }, new { @class = "freemarket-link" })
            </td>
            <td>
                @Html.ActionLink("Create Order For This Customer", "CreateCashOrder", "Admin", new { id = result.Id }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }
</table>

}
