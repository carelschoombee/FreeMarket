@using FreeMarket.Models
@model Custodian

<div class="form-group">
    @Html.LabelFor(m => m.CustodianName, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.CustodianName))
        {
            @Html.DisplayFor(m => m.CustodianName)
            @Html.HiddenFor(m => m.CustodianName)
        }
        else
        {
            @Html.TextBoxFor(m => m.CustodianName, new { @class = "form-control" })
        }

        @Html.HiddenFor(m => m.CustodianNumber)
        
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.CustodianCellphoneNumber, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.CustodianCellphoneNumber, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.CustodianTelephoneNumber, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.CustodianTelephoneNumber, new { @class = "form-control" })
    </div>
</div>

@if (Model.ActivatedProducts != null && Model.ActivatedProducts.Products.Count > 0)
{
    <table class="table table-bordered-custom table-responsive">
        @for (int i = 0; i < Model.ActivatedProducts.Products.Count; i++)
        {

            <tr>
                <td>
                    @Model.ActivatedProducts.Products[i].Description
                    @Html.HiddenFor(c => Model.ActivatedProducts.Products[i].ProductNumber)
                </td>
                <td>
                    @Model.ActivatedProducts.Products[i].SupplierName
                    @Html.HiddenFor(c => Model.ActivatedProducts.Products[i].SupplierNumber)
                    @Html.HiddenFor(c => Model.ActivatedProducts.Products[i].Description)
                    @Html.HiddenFor(c => Model.ActivatedProducts.Products[i].Size)
                    @Html.HiddenFor(c => Model.ActivatedProducts.Products[i].Weight)
                </td>
                <td>
                    @Html.EditorFor(c => Model.ActivatedProducts.Products[i].CustodianActivated)
                </td>
            </tr>

        }
    </table>
}




