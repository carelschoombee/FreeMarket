@using FreeMarket.Models
@model PostalFee

<div class="form-group">
    @Html.LabelFor(m => m.Id, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @Html.DisplayFor(m => m.Id)
        @Html.HiddenFor(m => m.Id)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Weight, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @{ Html.EnableClientValidation(false); }
        @Html.TextBoxFor(m => m.Weight, new { @class = "form-control" })
        @{ Html.EnableClientValidation(true); }
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Price, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @{ Html.EnableClientValidation(false); }
        @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control" } })
        @{ Html.EnableClientValidation(true); }
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.PerKgExtraPrice, new { @class = "col-md-4 control-label" })
    <div class="col-md-6">
        @{ Html.EnableClientValidation(false); }
        @Html.EditorFor(m => m.PerKgExtraPrice, new { htmlAttributes = new { @class = "form-control" } })
        @{ Html.EnableClientValidation(true); }
    </div>
</div>