@using FreeMarket.Models
@model Supplier
@{
    ViewBag.Title = "Edit Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-center"><span class="glyphicon glyphicon-edit text-success"></span>&nbsp;Edit Supplier</h2>
<hr />

<div id="parent" class="container center_div">

    @if (Model != null)
    {
        using (Html.BeginForm("EditSupplierProcess", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "supplierForm" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="well well-modal">
                @Html.Partial("_SupplierPartial", Model)

                <hr />

                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" class="btn btn-info" value="Update" />
                        @Html.ActionLink("Back", "SuppliersIndex", "Admin", new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>           
        }
    }

</div>

@Html.Partial("_ValidateSupplierPartial", Model)