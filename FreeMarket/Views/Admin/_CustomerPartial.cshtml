@using FreeMarket.Models
@model AspNetUserCustomer

@if (Model.DisplayOnly)
{
    <div class="form-group">
        @Html.Label("ID (FOR ADMIN USE ONLY)")
        <div>
            @Html.DisplayFor(m => m.User.Id)
            @Html.HiddenFor(m => m.User.Id)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Name")
        <div>
            @Html.DisplayFor(m => m.User.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Communication Preference")
        <div>
            @Html.DisplayFor(model => model.SelectedCommunicationOption)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Unsubscribe Correspondence")
        <div>
            @Html.DisplayFor(m => m.User.UnsubscribeFromAllCorrespondence)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Email")
        <div>
            @Html.DisplayFor(m => m.User.Email)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Primary Phone")
        <div>
            @Html.DisplayFor(m => m.User.PhoneNumber)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Secondary Phone")
        <div>
            @Html.DisplayFor(m => m.User.SecondaryPhoneNumber)
        </div>
    </div>
}
else
{
    <div class="form-group">
        @Html.Label("ID (FOR ADMIN USE ONLY)", new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.DisplayFor(m => m.User.Id)
            @Html.HiddenFor(m => m.User.Id)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Name", new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.User.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Communication Preference", new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.DropDownListFor(model => model.SelectedCommunicationOption, Model.CommunicationOptions, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Unsubscribe Correspondence", new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.EditorFor(m => m.User.UnsubscribeFromAllCorrespondence)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Email", new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Primary Phone", new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.User.PhoneNumber, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Secondary Phone", new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.User.SecondaryPhoneNumber, new { @class = "form-control" })
        </div>
    </div>
}


