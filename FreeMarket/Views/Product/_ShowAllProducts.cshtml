@using FreeMarket.Models
@model ProductCollection

@helper ListProduct(int i)
{
    <div>
        <table class="table table-responsive well">
            <tr>
                <td>
                    <img class="img-thumbnail" src="@Url.Action("RenderImage", "Image", new { id = Model.Products[i].MainImageNumber})" alt="@Model.Products[i].Description" title="@Model.Products[i].Description" />
                </td>
            </tr>
            <tr>
                <td style="font-size: 16px; color:black">
                    <i><strong>@Html.DisplayFor(model => Model.Products[i].Description)</strong></i>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => Model.Products[i].SupplierName)
                </td>
            </tr>
            <tr>
                <td style="font-size: 20px">
                    @String.Format("{0:C}", Model.Products[i].PricePerUnit) &nbsp;per @Html.DisplayFor(model => Model.Products[i].Weight)&nbsp;KG
                </td>
            </tr>
            
            <tr>
                <td>
                    <a data-id="@Url.Action("CourierSelectionModal", "ShoppingCart")/@Model.Products[i].ProductNumber?supplierNumber=@Model.Products[i].SupplierNumber&amp;quantity=1"
                       class="btn btn-success editClass"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true">Add to Cart</span></a>
                </td>
            </tr>

        </table>
    </div>
}

@for (int i = 0; i < Model.Products.Count; i++)
{
    <div class="row">
    @if (i < Model.Products.Count)
    {
        <div class="col-sm-3">                
            @ListProduct(i)
        </div>
    }
    @if (++i < Model.Products.Count)
    {
        <div class="col-sm-3">
                @ListProduct(i)
        </div>
    }
    @if (++i < Model.Products.Count)
    {
        <div class="col-sm-3">
            @ListProduct(i)
        </div>
    }
    @if (++i < Model.Products.Count)
    {
        <div class="col-sm-3">
            @ListProduct(i)
        </div>
    }
    </div>
}
