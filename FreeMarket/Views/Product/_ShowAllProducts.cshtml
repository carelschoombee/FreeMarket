@using FreeMarket.Models
@model ProductCollection

@helper ListProduct(int i)
{
    AjaxOptions ajaxOpts = new AjaxOptions
    {
        UpdateTargetId = "cartPartial",
        LoadingElementId = "loadingDiv"
    };

    <div>
        <div class="col-sm-6">
            <img src="@Url.Action("RenderImage", "Image", new { id = Model.Products[i].MainImageNumber})" alt="Free Market" />
        </div>
    </div>

    <div>
        <table class="table">
            <tr>
                <td>
                    <strong>@Html.DisplayFor(model => Model.Products[i].Description)</strong>
                </td>
            </tr>
            <tr>
                <td>
                    @String.Format("{0:C}", Model.Products[i].PricePerUnit)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => Model.Products[i].Weight)&nbsp;@Html.DisplayFor(model => Model.Products[i].Size)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => Model.Products[i].SupplierName)
                </td>
            </tr>
            <tr>
                <td>
                    @using (Ajax.BeginForm("AddToCart", "ShoppingCart", null, ajaxOpts))
                    {
                        @Html.AntiForgeryToken()

                        @Html.Hidden("productNumber", Model.Products[i].ProductNumber)
                        @Html.Hidden("supplierNumber", Model.Products[i].SupplierNumber)
                        @Html.Hidden("courierNumber", (int)0)
                        @Html.Hidden("quantity", (int)1)

                        <input type="submit" value="Add to Cart" class="btn btn-success" />
                    }
                </td>
            </tr>

        </table>
    </div>
}

<div class="container">
    <div class="col-sm-12">
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            <div class="row">
                <div class="col-sm-12">
                    @if (i < Model.Products.Count)
                    {
                        <div class="col-sm-4 well">                
                            @ListProduct(i)
                        </div>
                    }
                    @if (++i < Model.Products.Count)
                    {
                        <div class="col-sm-4 well">
                             @ListProduct(i)
                        </div>
                    }
                    @if (++i < Model.Products.Count)
                    {
                        <div class="col-sm-4 well">
                            @ListProduct(i)
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
