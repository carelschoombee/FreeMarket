
@{
    ViewBag.Title = "Pecan Nuts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="parent" class="center_div container">
    <div class="col-sm-12">
        <div class="row">
            <h1 class="text-center">Welcome</h1>
            <hr />
        </div>
        <div class="row">
            @Html.Partial("_ProductCarousel")
        </div>
        <div class="row well">
            Our Pecan nuts have been vacuum packed and stored in an airconditioned
            facility.  You can either keep yours in a freezer or in your fridge for
            anything from 12 months to 24 months, without a loss in freshness.  In South
            Africa Pecan nuts are harvested in May, so it is best pratice to schedule
            your annual purchases shortly thereafter.
        </div>
        <div class="col-md-offset-4 row">
            <span class="icon-input-btn"><span class="glyphicon glyphicon-shopping-cart"></span> <a class="btn btn-success" href="@Url.Action("Index", "Product")">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Start Shopping!</a></span>
        </div>
    </div>
</div>

<script type="text/javascript">

$(document).ready(function(){

     $("#myCarousel").carousel({

         interval : 5000

     });

});

$(document).ready(function () {
    $(".icon-input-btn").each(function () {
        var btnFont = $(this).find(".btn").css("font-size");
        var btnColor = $(this).find(".btn").css("color");
        $(this).find(".glyphicon").css("font-size", btnFont);
        $(this).find(".glyphicon").css("color", btnColor);
        if ($(this).find(".btn-xs").length) {
            $(this).find(".glyphicon").css("top", "24%");
        }
    });
});

</script>