@using FreeMarket.Models
@model Support

@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="parent" class="center_div container">
    <div class="col-sm-12">
        <div class="row">
            <h1 class="text-center">Contact Us</h1>
            <hr />
        </div>
        <div class="row">
            @Html.Partial("_StruisbaaiCarousel")
        </div>
        <div class="row well">
            <h2>Location</h2>
            Schoombee And Son is a partnership that is based in Struisbaai in the Western Cape
            of South Africa that specializes in Pecan Nuts.

            Please feel free to contact us with any queries or concerns.
        </div>

        <div class="row well">
            <h2>Phone</h2>
            <div>
                <span class="glyphicon glyphicon-phone">@Model.Landline</span>
            </div>
            <div>
                <span class="glyphicon glyphicon-phone">@Model.Cellphone</span>
            </div>
        </div>

        <div class="row well">
            <h2>Email</h2>
            <span class="glyphicon glyphicon-pencil"><a class="freemarket-link" href="mailto:@Model.Email">Email Us</a></span>
        </div>
        <div class="col-md-offset-4 row">
            <span class="icon-input-btn"><span class="glyphicon glyphicon-shopping-cart"></span> <a class="btn btn-success" href="@Url.Action("Index", "Product")">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Start Shopping!</a></span>
        </div>
    </div>
</div>

<script type="text/javascript">

$(document).ready(function(){

     $("#myCarousel").carousel({

         interval : 5000

     });

});

$(document).ready(function () {
    $(".icon-input-btn").each(function () {
        var btnFont = $(this).find(".btn").css("font-size");
        var btnColor = $(this).find(".btn").css("color");
        $(this).find(".glyphicon").css("font-size", btnFont);
        $(this).find(".glyphicon").css("color", btnColor);
        if ($(this).find(".btn-xs").length) {
            $(this).find(".glyphicon").css("top", "24%");
        }
    });
});

</script>