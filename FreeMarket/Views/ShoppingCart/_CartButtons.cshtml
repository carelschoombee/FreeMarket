@model FreeMarket.Models.ShoppingCartViewModel

<div class="col-md-12 well">
	<div class="col-md-7">
		<span class="icon-input-btn"><span class="glyphicon glyphicon-shopping-cart"></span> <a class="btn btn-primary btn-sm" href="@Model.ReturnUrl">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Continue Shopping</a></span>
	</div>
	<div class="col-md-5">
		<span class="icon-input-btn"><span class="glyphicon glyphicon-floppy-save"></span> <input type="submit" value="Save" class="btn btn-primary btn-sm" /></span>
		@if (User.Identity.IsAuthenticated)
		{
			<a data-id="@Url.Action("SaveCartModal", "ShoppingCart")" class="btn btn-primary btn-sm saveClass"><span class="glyphicon glyphicon-time"></span>&nbsp;&nbsp;Delivery Details</a>
			<span class="icon-input-btn"><span class="glyphicon glyphicon-lock"></span> <a class="btn btn-success btn-sm">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Secure Check Out</a></span>
		}
	</div>
</div>

<script type="text/javascript">

$(document).ready(function(){
	$(".icon-input-btn").each(function(){
		var btnFont = $(this).find(".btn").css("font-size");
		var btnColor = $(this).find(".btn").css("color");
		$(this).find(".glyphicon").css("font-size", btnFont);
		$(this).find(".glyphicon").css("color", btnColor);
		if($(this).find(".btn-xs").length){
			$(this).find(".glyphicon").css("top", "24%");
		}
	});
});

</script>