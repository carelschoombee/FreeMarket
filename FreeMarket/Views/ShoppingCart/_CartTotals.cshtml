@model FreeMarket.Models.ShoppingCart

<table class="table table-condensed table-bordered-custom well">
    <tr>
        <td class="col-sm-2 text-left"><strong>Sub-Total:</strong></td>
        <td class="col-sm-2 text-right"><strong>@string.Format("{0:C}", Model.Order.SubTotal)</strong></td>
    </tr>
    <tr>
        <td class="col-sm-2 text-left"><strong>Shipping:</strong></td>
        <td class="col-sm-2 text-right"><strong>@string.Format("{0:C}", Model.Order.ShippingTotal)</strong></td>
    </tr>
    <tr class="text-primary" >
        <td class="col-sm-2 text-left"><strong style="font-size: 20px">Total:</strong></td>
        <td class="col-sm-2 text-right" ><strong style="font-size: 20px">@string.Format("{0:C}", Model.Order.TotalOrderValue)</strong></td>
    </tr>
</table>


