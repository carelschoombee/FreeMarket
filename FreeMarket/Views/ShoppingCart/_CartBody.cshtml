@using FreeMarket.Models
@model ShoppingCartViewModel

<table class="table table-bordered-custom table-responsive">
    <tr>
        <th class="col-sm-1">
            Remove
        </th>
        <th class="col-sm-1">
            Image
        </th>
        <th class="col-sm-1">
            Description
        </th>
        <th class="col-sm-1">
            Price
        </th>
        <th class="col-sm-1">
            Quantity
        </th>
        <th class="col-sm-1">
            Total
        </th>
    </tr>

    @foreach (OrderDetail item in Model.Cart.Body.OrderDetails)
    {
       <tr>
           <td>
               @Html.EditorFor(model => item.Selected)
           </td>
           <td>
               <img src="@Url.Action("RenderImage", "Image", new { id = item.MainImageNumber, defaultSize = PictureSize.Small })" />
           </td>
           <td>
               @Html.DisplayFor(model => item.ProductDescription)
           </td>
           <td>
               @Html.DisplayFor(model => item.Price)
           </td>
           <td>
               @Html.EditorFor(model => item.Quantity, new { htmlAttributes = new { @style = "width: 100px", @class = "form-control" } })
           </td>
           <td>
               @Html.DisplayFor(model => item.OrderItemValue)
           </td>
       </tr>
    }
</table>

