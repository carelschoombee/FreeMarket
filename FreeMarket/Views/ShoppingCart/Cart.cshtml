@model FreeMarket.Models.ShoppingCartViewModel

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Shopping Cart</h2>

<div class="container">
    <div class="row">
        @using (Html.BeginForm("UpdateCart", "ShoppingCart", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken();

            @Html.Partial("_CartBody", Model.Cart.Body)

            @Html.Partial("_CartButtons")
        }
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-6">
                @*@Html.Action("CartShipping", Model.Cart.Body)*@
            </div>
            <div class="col-sm-6">
                @Html.Action("CartTotals", Model.Cart)
            </div>
        </div>
    </div>
</div>

